<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.android.angelo.popularmovies.DetailActivity"
    android:background="@color/cardview_light_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cardview_light_background">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/movie_poster_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/cardview_light_background">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/movies_picture_description"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/poster"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/image_iv"
                android:contentDescription="@string/movie_poster_label" />

            <TextView
                android:id="@+id/movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/image_iv"
                android:layout_toEndOf="@+id/poster"
                android:contentDescription="@string/movie_name_label"
                android:maxLines="2"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/movie_release_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/movie_name"
                android:layout_below="@+id/movie_name"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/movie_rating_label"
                android:maxLines="3"
                android:textSize="17sp" />

            <Button
                android:id="@+id/save_as_favourites"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/movie_name"
                android:layout_below="@+id/movie_release_date"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/movie_rating_label"
                android:maxLines="2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movie_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/movie_release_date"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/movie_name"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/movie_release_date_label"
                android:maxLines="2"
                android:textSize="17sp" />

        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@color/cardview_light_background">

            <android.support.v4.view.PagerTabStrip
                android:id="@+id/pager_title_strip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textColor="#fff"
                android:paddingTop="4dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</FrameLayout>
